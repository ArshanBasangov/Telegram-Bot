import random
import telebot

alldmg = 0 #–í—ã—Å—á–∏—Ç–∞–Ω–Ω–∞—è –∞—Ç–∞–∫–∞
dmg = 0 #–ë–∞–∑–æ–≤–∞–Ω—è –∞—Ç–∞–∫–∞
cdmg = 0 #–£—Ä–æ–Ω –Ω–∞–≤—ã–∫–∞ (–≤ –ø—Ä–æ—Ü–µ–Ω—Ç–∞—Ö)
crit = 0 #–ö—Ä–∏—Ç —É—Ä–æ–Ω (–≤ –ø—Ä–æ—Ü–µ–Ω—Ç–∞—Ö)
elem = 0 #–î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–≤—ã–π —É—Ä–æ–Ω (–≤ –ø—Ä–æ—Ü–µ–Ω—Ç–∞—Ö)
from telebot import types
bot = telebot.TeleBot('5098506762:AAGDDC0r9_2i05SRXmkzBhOBy-jRIDet_zg')

@bot.message_handler(commands=['start']) #–ó–∞–ø—É—Å–∫–∞–µ—Ç –±–æ—Ç–∞, –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é –ø—Ä–µ–¥–ª–∞–≥–∞—é—Ç –∫–æ–º–∞–Ω–¥—ã –Ω–∞ –≤—ã–±–æ—Ä
def Welcome(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = types.KeyboardButton('–ö–∏–Ω—å —Ñ–æ—Ç–æ –ê—Ä–∏–∞–Ω—ãüßö')
    button2 = types.KeyboardButton('–®—É—Ç–∫–∞–Ω–∏ —à—É—Ç–∫—Éüßê')
    button3 = types.KeyboardButton('–ü–µ—Ä–≤–µ—Å—Ç–∏ —á–∏—Å–ª–æ –≤ 10 —Å—Å')
    button4 = types.KeyboardButton('–ü–æ—Å—á–∏—Ç–∞—Ç—å —É—Ä–æ–Ω')
    button5 = types.KeyboardButton('–ß—Ç–æ –¥–µ–ª–∞—Ç—å, –µ—Å–ª–∏ –ø—Ä–æ—Å—Ä–æ—á–∏–ª –¥–µ–¥–ª–∞–π–Ω?')
    markup.add(button1, button2, button3, button4, button5)
    bot.send_message(message.chat.id, '–ü—Ä–∏–≤–µ—Ç, —è –±–æ—Ç –°–∞–Ω–∞. –†–∞–¥–∞ –ø–æ–∑–Ω–∞–∫–æ–º–∏—Ç—å—Å—è! –Ø —É–º–µ—é –¥–µ–ª–∞—Ç—å –Ω–µ —Ç–∞–∫ —É–∂ –∏ –º–Ω–æ–≥–æ –≤–µ—â–µ–π, –Ω–æ, –¥—É–º–∞—é, –Ω–∞–º –±—É–¥–µ—Ç –≤–µ—Å–µ–ª–æ.', reply_markup=markup)
    sti = open('ch.webp', 'rb')
    bot.send_sticker(message.chat.id, sti)

@bot.message_handler(func=lambda m: True)

def Talk(message): # –í –∑–∞–≤–∏—Å–∏–º–æ—Ç–∏ –æ—Ç –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∫–æ–º–∞–Ω–¥—ã, –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è –Ω—É–∂–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
    photos = ['https://www.trendsmap.com/ipx/https://pbs.twimg.com/media/Ek_LPzDWMAEDvMN.jpg', 'https://data.whicdn.com/images/315981200/original.jpg', 'https://video-images.vice.com/articles/60dda4e24dbc6c0095659133/lede/1625138404580-untitled-1.jpeg?crop=1xw:1xh;center,center&amp;resize=1200:*', 'https://townsquare.media/site/252/files/2018/11/ariana-grande4.jpg?w=1200&h=0&zc=1&s=0&a=t&q=89', 'https://i.pinimg.com/originals/29/d0/3b/29d03b8cbd6624364d935ef80ea7ab54.jpg']
    songs = ['–ö–∞–∫ —Ä–æ–¥–∏—Ç–µ–ª–∏-—Å–∫–µ–ª–µ—Ç—ã –Ω–∞–∑–≤–∞–ª–∏ —Å–≤–æ–µ–≥–æ —Å—ã–Ω–∞? –ö–æ—Å—Ç—è.', "–ö–æ–ª–æ–±–æ–∫ –ø–æ–≤–µ—Å–∏–ª—Å—è.", "–†—É—Å–∞–ª–∫–∞ —Å–µ–ª–∞ –Ω–∞ —à–ø–∞–≥–∞—Ç", "–ü–æ–¥—Ö–æ–¥–∏—Ç –æ—Ñ–∏—Ü–∏–∞–Ω—Ç–∫–∞ –∫ —Ä–∏–º–ª—è–Ω–∞–º –∏ —Å–ø—Ä–∞—à–∏–≤–∞–µ—Ç –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø–æ—Ä—Ü–∏–π. –ò —Ç—É—Ç –æ–¥–∏–Ω –∏–∑ —Ä–∏–º–ª—è–Ω–∏–Ω –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç —É–∫–∞–∑–∞—Ç–µ–ª—å–Ω—ã–π –∏ —Å—Ä–µ–¥–Ω–∏–π –ø–∞–ª–µ—Ü."]
    if message.chat.type == 'private':
        if message.text == '–ü–æ—Å—á–∏—Ç–∞—Ç—å —É—Ä–æ–Ω':
            bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ –∞—Ç–∞–∫–∏ (–±–∞–∑–æ–≤–∞—è + –±–æ–Ω—É—Å—ã)')
            bot.register_next_step_handler(message, baz)
        elif message.text == '–®—É—Ç–∫–∞–Ω–∏ —à—É—Ç–∫—Éüßê':
            bot.send_message(message.chat.id, random.choice(songs))
        elif message.text == '–ö–∏–Ω—å —Ñ–æ—Ç–æ –ê—Ä–∏–∞–Ω—ãüßö':
            p = random.choice(photos)
            bot.send_photo(message.chat.id, p)
        elif message.text == '–ü–µ—Ä–≤–µ—Å—Ç–∏ —á–∏—Å–ª–æ –≤ 10 —Å—Å':
            markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
            button1 = types.KeyboardButton('–ò–∑ 2 —Å—Å')
            button2 = types.KeyboardButton('–ò–∑ 8 —Å—Å')
            markup.add(button1, button2)
            bot.send_message(message.chat.id, '–ò–∑ –∫–∞–∫–æ–π —Å–∏—Å—Ç–µ–º—ã —Å—á–∏—Å–ª–µ–Ω–∏—è –≤—ã —Ö–æ–∏—Ç–µ –ø–µ—Ä–µ–≤–µ—Å—Ç–∏?', reply_markup=markup)
            bot.register_next_step_handler(message, ss)
        elif message.text == '–ß—Ç–æ –¥–µ–ª–∞—Ç—å, –µ—Å–ª–∏ –ø—Ä–æ—Å—Ä–æ—á–∏–ª –¥–µ–¥–ª–∞–π–Ω?':
            bot.register_next_step_handler(message, planscam)
def ss(message): # –ó–∞–ø—É—Å–∫ —Ñ—É–Ω–∫—Ü–∏–∏ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç –≤—ã–±—Ä–∞–Ω–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã —Å—á–∏—Å–ª–µ–Ω–∏—è
    if message.chat.type == 'private':
        if message.text == '–ò–∑ 2 —Å—Å':
            bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
            bot.register_next_step_handler(message, dv)
        elif message.text == '–ò–∑ 8 —Å—Å':
            bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
            bot.register_next_step_handler(message, vos)

def repeatss(message): # –ü–æ—Å–ª–µ —Ç–æ–≥–æ, –∫–∞–∫ –±–æ—Ç –ø–µ—Ä–µ–≤–µ–ª —á–∏—Å–ª–æ –∏–∑ –≤—ã–±—Ä–∞–Ω–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã —Å—á–∏—Å–ª–µ–Ω–∏—è, –ø—Ä–µ–¥–ª–∞–≥–∞–µ—Ç—Å—è –¥–∞–ª—å–Ω–µ–π—à–∏–π –ø—É—Ç—å
    if message.chat.type == 'private':
        if message.text == '–ù–∞–∑–∞–¥':
            bot.send_message(message.chat.id, '–ß—Ç–æ –¥–∞–ª—å—à–µ?')
            bot.register_next_step_handler(message, Welcome)
        elif message.text == '–ï—â–µ —Ä–∞–∑ 8—Å—Å':
            bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
            bot.register_next_step_handler(message, vos)
        elif message.text == '–ï—â–µ —Ä–∞–∑ 2—Å—Å':
            bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ')
            bot.register_next_step_handler(message, dv)

def vos(message): # –ü–µ—Ä–µ–≤–æ–¥ –∏–∑ 8 —Å—Å
    number = int(message.text) #–ß–∏—Å–ª–æ, –∫–æ—Ç–æ—Ä–æ–µ –Ω—É–∂–Ω–æ –ø–µ—Ä–µ–≤–µ—Å—Ç–∏
    n = 0 #–°—Ç–µ–ø–µ–Ω—å —á–∏—Å–ª–∞
    answer = 0 #–û—Ç–≤–µ—Ç
    while number > 0:
        d = number % 10 #–û—Ç—Å–µ—á–µ–Ω–∏–µ –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ —á–∏—Å–ª–∞
        answer = answer + d*8**n
        n+=1
        number = number // 10
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = types.KeyboardButton('–ù–∞–∑–∞–¥')
    button2 = types.KeyboardButton('–ï—â–µ —Ä–∞–∑ 8—Å—Å')
    markup.add(button1, button2)
    bot.send_message(message.chat.id, answer, reply_markup=markup)
    bot.register_next_step_handler(message, repeatss)

def dv(message): # –ü–µ—Ä–µ–≤–æ–¥ –∏–∑ 2 —Å—Å
    number = int(message.text)
    n = 0
    answer = 0
    while number>0:
        d = number % 10
        answer = answer + d*2**n
        n+=1
        number = number // 10
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = types.KeyboardButton('–ù–∞–∑–∞–¥')
    button2 = types.KeyboardButton('–ï—â–µ —Ä–∞–∑ 2—Å—Å')
    markup.add(button1, button2)
    bot.send_message(message.chat.id, answer, reply_markup=markup)
    bot.register_next_step_handler(message, repeatss)

def baz(message): # –í–≤–æ–¥–∏—Ç—Å—è –∞—Ç–∞–∫–∞ –∏ –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è –ø–æ–¥—á–µ—Ç
    global dmg
    dmg = int(message.text)
    bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ —É—Ä–æ–Ω —Ç–∞–ª–∞–Ω—Ç–∞')
    bot.register_next_step_handler(message, cbaz)
def cbaz(message): # –ü–æ–¥—Å—á–µ—Ç —É—Ä–æ–Ω–∞ –Ω–∞–≤—ã–∫–∞
    global alldmg
    global cdmg
    cdmg = int(message.text)
    alldmg = dmg*(cdmg/100)
    bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ –∫—Ä–∏—Ç–∞')
    bot.register_next_step_handler(message, critdmg)
def critdmg(message): # –ü–æ–¥—Å—á–µ—Ç –∫—Ä–∏—Ç–∏—á–µ—Å–∫–æ–≥–æ —É—Ä–æ–Ω–∞ –Ω–∞–≤—ã–∫–∞
    global crit
    global alldmg
    crit = int(message.text)
    alldmg = alldmg*(crit/100)
    bot.send_message(message.chat.id, '–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–µ–Ω–∏–µ –±–æ–Ω—É—Å–Ω–æ–≥–æ')
    bot.register_next_step_handler(message, elemdmg)
def elemdmg(message): # –ü–æ–¥—Å—á–µ—Ç –∫—Ä–∏—Ç–∏—á–µ—Å–∫–æ–≥–æ —É—Ä–æ–Ω–∞ –Ω–∞–≤—ã–∫–∞ –ø–ª—é—Å –±–æ–Ω—É—Å–Ω—ã–π —É—Ä–æ–Ω
    global elem
    global alldmg
    elem = int(message.text)
    alldmg = alldmg + alldmg*(elem/100)
    bot.send_message(message.chat.id, '–ü–æ–ª—É—á–∞–µ—Ç—Å—è –ø—Ä–∏–º–µ—Ä–Ω–æ ' + str(alldmg))
    bot.register_next_step_handler(message, Welcome)

def planscam(message): # –û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç —Å—Å—ã–ª–∫—É –Ω–∞ –≤–∏–¥–µ–æ
    bot.send_message(message.chat.id, 'https://www.tiktok.com/@aanyyyyyaa/video/7034116221326904577?is_copy_url=0&is_from_webapp=v1&q=%D0%BA%D0%BE%D0%B3%D0%B4%D0%B0%20%D0%BF%D1%80%D0%BE%D1%81%D1%80%D0%BE%D1%87%D0%B8%D0%BB%D0%B0%20%D0%B4%D0%B5%D0%B4%D0%BB%D0%B0%D0%B9%D0%BD&t=1639777232560&sender_device=pc&sender_web_id=7030209992129086977')
    bot.register_next_step_handler(message, Welcome)

bot.polling(none_stop=True)
